<% include ../partials/header %>
<div class = "container">    
    <div class = "row">
        <h1 class = "text-center">Edit Nachos</h1>
        <div class = "form">
            <form action = "/nachos/<%= nacho_id %>/comments/<%= comment._id %>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" value = "<%= comment.text %>">
                </div>    
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-block btn-primary">Submit Review</button>
                </div>
            </form>
            <a href = "/nachos">Go Back</a>
        </div>
    </div>
</div>
