<% include partials/header %>
<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to Nacho Critique!</h1>
            <p>Below are nachos that have already been rated</p>
            <p>
                <a class = "btn btn-primary btn-large" href = "nachos/new">Add new Nacho Review</a>        
            </p>
        </div>
    </header>
    <div class = "row text-center">
            <% nachos.forEach(function(nachos){ %>
                <div class = "col-md-3 col-sm-6">
                    <div class = "thumbnail">
                        <img src = "<%= nachos.image %>">
                        <div class = "caption">
                            <h4><%= nachos.restaurant %></h4>
                        </div>
                        <p>
                            <a href = "/nachos/ <%= nachos._id %>" class = "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %> 
    </div>
</div>
<% include partials/footer %>