<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Sign Up!</h1>
        <form action = "/register" method = "POST">
            <div class="form">
                <div class="form-group">
                    <input type = "text" class="form-control" name = "username" placeholder = "username">
                </div>
                <div class="form-group">
                    <input type = "password" pattern=".{8,}"   required title="Please use at least 8 characters" class="form-control" name = "password" placeholder = "password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-info">Create Account</button>
                </div>
            </div>
        </form>
    </div>
</div>

<% include partials/footer %>