<% include ../partials/header %>
<div class = "container">    
    <div class = "row">
        <h1 class = "text-center"> Edit <%= nacho.restaurant %>'s Nachos</h1>
        <div class = "form">
            <form action = "/nachos/<%= nacho._id %>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "nacho[restaurant]" value = "<%= nacho.restaurant %>">
                </div>    
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "nacho[image]" value = "<%= nacho.image %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "nacho[description]" value = "<%= nacho.description %>" >
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-block btn-primary">Submit Review</button>
                </div>
            </form>
            <a href = "/nachos/<%= nacho._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>